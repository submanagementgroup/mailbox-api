{
  "name": "mailbox-api",
  "version": "0.1.0",
  "description": "Email MFA Platform - Lambda API Backend with CDK Infrastructure",
  "main": "dist/index.js",
  "bin": {
    "mailbox-api": "bin/mailbox-api.js"
  },
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc -p src/tsconfig.json",
    "watch": "tsc -w",
    "clean": "rm -rf dist cdk.out",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "cdk": "cdk",
    "synth": "npm run build && npx cdk synth",
    "deploy:dev": "npm run build && npx cdk deploy --all --context target-env=dev",
    "deploy:prod": "npm run build && npx cdk deploy --all --context target-env=prod",
    "diff": "npm run build && npx cdk diff",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child -r dotenv/config local-server.ts dotenv_config_path=.env.local",
    "get-db-password": "aws secretsmanager get-secret-value --secret-id dev/mail-platform/db --region ca-central-1 --query SecretString --output text | jq -r .password"
  },
  "keywords": [
    "email",
    "mfa",
    "lambda",
    "aws"
  ],
  "author": "Sub Management Group",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/client-secrets-manager": "^3.540.0",
    "@aws-sdk/client-ses": "^3.540.0",
    "@azure/identity": "^4.0.0",
    "@azure/msal-node": "^2.6.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@submanagementgroup/cdk-pipelines-client": "1.9.0",
    "aws-cdk-lib": "2.202.0",
    "aws-lambda": "^1.0.7",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "constructs": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mailparser": "^3.6.6",
    "mysql2": "^3.9.1",
    "source-map-support": "^0.5.21",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.157",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.4",
    "@types/node": "22.7.9",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "aws-cdk": "2.1020.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
